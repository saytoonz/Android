<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/LinearLayout_FriendsList">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friendsPFP"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/sss2"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_more_vert"
                android:contentDescription="@string/launcher" />


            <TextView
                android:id="@+id/FriendUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/friendsPFP"
                android:text="@string/Username"
                android:textSize="18sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/hash"
                android:layout_toEndOf="@+id/friendsPFP"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                tools:ignore="RelativeOverlap,RtlSymmetry" />

            <TextView
                android:id="@+id/FriendFullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/FriendUsername"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/friendsPFP"
                android:text="@string/your_full_name"
                android:textSize="12sp"
                android:textColor="@color/hash"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/friendsPFP" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>